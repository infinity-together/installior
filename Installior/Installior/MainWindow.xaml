<Window x:Class="Installior.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installior"
        mc:Ignorable="d"
        Title="Installior" Height="600" Width="480" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Loaded="MainWindow_Loaded" Background="Transparent">
    <Border Background="#FFF" CornerRadius="16">
        <Grid>
            <StackPanel x:Name="ToolBar" Background="Transparent" Margin="0,0,0,570" MouseLeftButtonDown="ToolBar_MouseLeftButtonDown" MouseRightButtonDown="ToolBar_MouseRightButtonDown" />

            <Frame x:Name="PagePlace" NavigationUIVisibility="Hidden" Margin="0,30,0,0" />
        </Grid>
    </Border>
</Window>
